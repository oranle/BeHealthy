<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white_50">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="添加活动项目"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:padding="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_close" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ic_padding"
                android:layout_marginEnd="@dimen/ic_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/typed_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="项目名称："
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text" />

                <EditText
                    android:id="@+id/edit_type_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ic_padding"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="@dimen/ic_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="目标单位："
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text" />

                <EditText
                    android:id="@+id/edit_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="计量单位,大卡，喝水、杯"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_50"
                    android:textSize="@dimen/normal_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ic_padding"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="@dimen/ic_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/target_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="目标数额："
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text" />

                <EditText
                    android:id="@+id/edit_target"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:textColorHint="@color/white_50"
                    android:textSize="@dimen/normal_text" />

            </LinearLayout>

            <TextView
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_button_border_r_4"
                android:gravity="center"
                android:paddingStart="50dp"
                android:paddingTop="5dp"
                android:paddingEnd="50dp"
                android:paddingBottom="5dp"
                android:text="完成"
                android:textColor="@color/red"
                android:textSize="@dimen/title_text" />

        </LinearLayout>

    </LinearLayout>

</layout>